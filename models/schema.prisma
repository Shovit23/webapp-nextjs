generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "mysql://root:root@mysql:3306/detas"
}

model User {
  id       Int     @id @default(autoincrement())
  username String @unique
  email    String  @unique
  password String
  userRoles UserRoles[]
  module Modules[]
  @@map("users")
}


model UserRoles {
  id       Int     @id @default(autoincrement())
  userId   Int     
  roleName String
  user     User    @relation(fields: [userId], references: [id])
  @@map("user_roles")
}

model Roles {
  id       Int     @id @default(autoincrement())
  roleName String  @unique
  @@map("roles_list")
}

model Modules {
  id        Int      @id @default(autoincrement())
  moduleKey String   @unique
  moduleName String  @unique
  moduleDescription String?
  moduleOwner String
  user User? @relation(fields: [moduleOwner], references: [email])
  services Services[] 
  @@map("modules")
}

model Services {
  serviceId   Int     @id @default(autoincrement())
  serviceName String  @unique 
  serviceDescription String? 
  moduleName String 
  module      Modules? @relation(fields: [moduleName], references: [moduleName]) 
  @@map("services")
}


model UserToken {
  id        Int     @id @default(autoincrement())
  email String @unique
  token String @unique
  @@map("user_token")
}
